  <div class="action">
    {{#each actions}}
    <h3 class="action_heading">{{heading}}</h3>
    <div class="action_act">
      <a href="{{url}}" class="button action_button">{{text}}</a>
    </div>
    {{/each}}
  </div>

<footer class="footer">
  <div>
    {{> logo}}
    <span class="footer_copyright">Copyright 2023-2024</span>
  </div>
  {{#each footer}}
    <div>
      <span class="footer_title">{{title}}</span>
      {{>nav list=links isVertical=true}}
    </div>
  {{/each}}
</footer>