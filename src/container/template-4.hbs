<header class='header'>
  <div>
    {{> logo}}
  </div>
  <nav class='header_nav'>
    <div class=" header-nav-right">
      {{>nav list=header}}
    </div>
  </nav>
</header>
{{#with main}}
  <div class="main">
    <img src="{{image}}" alt="Main image" class="main_image">
    <div class="main_content">
      <h1 class="main_heading">{{heading}}</h1>
      <p class="main_description">{{description}}</p>
      <a href="{{href}}" class="button main_button">{{button}}</a>
    </div>
  </div>
{{/with}}

<div class="featured">
  {{#each featured}}
    <div class='card'>
      <img src="{{photo}}" alt="Main image" class="card_image">
      <h2 class='card_title'>{{heading}}</h2>
      <p class='card_text'>{{info}}</p>
      <div class="card_button_info">
        <a
          href='{{linkUrl}}'
          class='button card_button'
        >{{linkText}}</a>
      </div>
    </div>
  {{/each}}
</div>

  <div class="action">
    {{#each actions}}
    <div class="action_item">
      <h3 class="action_heading">{{heading}}</h3>
      <div class="action_act">
        <a href="{{url}}" class="action_button">{{text}}</a>
      </div>
    </div>
    {{/each}}
  </div>

<footer class="footer">
  <div>
    {{> logo}}
    <span class="footer_copyright">Copyright 2023-2024</span>
  </div>
  {{#each footer}}
    <div>
      <span class="footer_title">{{title}}</span>
      {{>nav list=links isVertical=true}}
    </div>
  {{/each}}
</footer>
